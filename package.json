{
  "name": "text-the-check",
  "version": "1.0.0",
  "private": true,
  "description": "Group vacation expense tracker with WhatsApp integration",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "ngrok:server": "npm run ngrok --workspace=server",
    "dev:server:tunnel": "npm-run-all --parallel dev:server ngrok:server",
    "build": "npm-run-all build:*",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "install:all": "npm install && npm install --workspace=client && npm install --workspace=server",
    "typecheck": "npm-run-all typecheck:*",
    "typecheck:client": "npm run typecheck --workspace=client",
    "typecheck:server": "npm run typecheck --workspace=server"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
